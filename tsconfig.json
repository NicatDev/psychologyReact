{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": { "@/*": ["src/*"] },
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "noEmitOnError": false,       // tip xətalarına baxmayaraq emit et
    "skipLibCheck": true,         // library check-ləri atla

    /* Strict mode bypass */
    "strict": false,
    "noUnusedLocals": false,      // istifadə olunmayan dəyişənlərə görə dayanmır
    "noUnusedParameters": false,
    "noImplicitAny": false,       // any tipini qəbul et
    "noFallthroughCasesInSwitch": false
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
