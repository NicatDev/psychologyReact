{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": { "@/*": ["src/*"] },
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,

    /* Type xətalarına baxmayaraq emit et */
    "noEmit": false,
    "noEmitOnError": false,

    /* Strict və lint qaydalarını söndür */
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitAny": false,
    "noFallthroughCasesInSwitch": false,

    /* TS uzantılı faylları import etmək üçün false saxla */
    "allowImportingTsExtensions": false
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
